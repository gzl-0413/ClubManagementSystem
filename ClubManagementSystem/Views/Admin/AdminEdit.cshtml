@model UpdateProfileVM

@{
    Layout = "_Layout";
    ViewBag.Title = "Edit Admin Profile";
}

<div class="container mt-4">
    <h2>Edit Admin</h2>

    <form asp-action="AdminEdit" method="post">
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="card-title">Admin Information</h5>
            </div>
            <div class="card-body">
                <!-- Email Field (readonly) -->
                <div class="form-group mb-3">
                    <label for="Email" class="form-label">Email</label>
                    <input type="email" asp-for="Email" class="form-control" readonly />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <!-- Name Field -->
                <div class="form-group mb-3">
                    <label for="Name" class="form-label">Name</label>
                    <input type="text" asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <!-- Save Button -->
                <div class="form-group">
                    <button type="submit" class="btn btn-primary w-100">Save Changes</button>
                </div>
            </div>
        </div>
    </form>

    <div class="mt-3">
        <a href="@Url.Action("AdminPage")" class="btn btn-secondary">Back to Admin Page</a>
    </div>
</div>

@section Styles {
    <style>
        .card {
            border: 1px solid #ddd;
            border-radius: 8px;
        }

        .form-label {
            font-weight: 600;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

        .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
        }
    </style>
}
