@model FeedBackViewModel

@{
    ViewData["Title"] = "Feedback Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f7fc;
        }

        .container {
            max-width: 800px;
            margin: 20px auto;
            background-color: white;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 20px;
        }

        h2 {
            text-align: center;
            color: #333;
        }

        .feedback-details {
            margin-top: 20px;
        }

        .feedback-meta {
            font-size: 14px;
            color: #555;
            margin-bottom: 20px;
        }

        .feedback-content {
            font-size: 16px;
            color: #333;
            margin-bottom: 20px;
        }

        .admin-reply {
            margin-top: 20px;
            padding: 15px;
            border-radius: 10px;
            background-color: #f4f7fc;
        }

            .admin-reply h4 {
                font-size: 18px;
                color: #007bff;
                margin-bottom: 10px;
            }

            .admin-reply p {
                font-size: 16px;
                color: #333;
            }

        .go-back {
            display: inline-block;
            margin-top: 20px;
            padding: 10px 20px;
            font-size: 14px;
            color: white;
            background-color: #007bff;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s ease;
            margin-left: 87.5%;
        }

            .go-back:hover {
                background-color: #0056b3;
                color: white;
            }

        img {
            margin: 5px;
            width: 100px;
            height: auto;
            border-radius: 4px;
            border: 1px solid #ddd;
            transition: transform 0.3s, box-shadow 0.3s;
            cursor: pointer;
        }

            img:hover {
                transform: scale(1.1);
                box-shadow: 0 6px 15px rgba(0, 0, 0, 0.2);
            }

        /* Lightbox styles */
        .lightbox {
            display: none;
            position: fixed;
            z-index: 9999;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.8);
            align-items: center;
            justify-content: center;
        }

            .lightbox img {
                max-width: 90%;
                max-height: 90%;
                margin: auto;
            }

            .lightbox.active {
                display: flex;
            }

        .lightbox-close {
            position: absolute;
            top: 40px;
            right: 40px;
            color: white;
            font-size: 30px;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>@ViewData["Title"]</h2>

        <div class="feedback-details">
            <div class="feedback-meta">
                <p><strong>Created On:</strong> @Model.CreateDateTime.ToString("yyyy-MM-dd HH:mm")</p>
            </div>

            <!-- Feedback Photos -->
            <div class="feedback-content">
                <p>@Model.Content</p>

                @if (!string.IsNullOrEmpty(Model.Photo) && Model.Photo != "-")
                {
                    <div style="margin-top: 10px;">
                        @foreach (var photo in Model.Photo.Split(','))
                        {
                            <img src="@Url.Content($"~/photos/{photo.Trim()}")" alt="Feedback Photo" />
                        }
                    </div>
                }
            </div>

            <!-- Admin Reply -->
            @if (Model.ReplyStatus != "Pending")
            {
                <div class="admin-reply">
                    <h4>Admin's Reply:</h4>
                    <p>@Model.ReplyContent</p>

                    @if (!string.IsNullOrEmpty(Model.ReplyPhoto) && Model.ReplyPhoto != "-")
                    {
                        <div style="margin-top: 10px;">
                            @foreach (var photo in Model.ReplyPhoto.Split(','))
                            {
                                <img src="@Url.Content($"~/photos/{photo.Trim()}")" alt="Reply Photo" />
                            }
                        </div>
                    }

                    <p><strong>Reply Date:</strong> @Model.ReplyDateTime?.ToString("yyyy-MM-dd HH:mm")</p>
                </div>
            }
            else
            {
                <div class="admin-reply">
                    <p><em>Awaiting admin response...</em></p>
                </div>
            }
        </div>

        <!-- Go Back Button -->
        <a href="@Url.Action("FeedbackView", "Feedback")" class="go-back">Go Back</a>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const images = document.querySelectorAll("img");
            const lightbox = document.createElement("div");
            const lightboxImg = document.createElement("img");
            const closeBtn = document.createElement("span");

            // Set up lightbox container
            lightbox.classList.add("lightbox");
            lightbox.appendChild(lightboxImg);
            closeBtn.classList.add("lightbox-close");
            closeBtn.textContent = "×";
            lightbox.appendChild(closeBtn);
            document.body.appendChild(lightbox);

            // Open lightbox on image click
            images.forEach(img => {
                img.addEventListener("click", function() {
                    lightboxImg.src = img.src; // Set the lightbox image source to the clicked image
                    lightbox.classList.add("active");
                });
            });

            // Close lightbox when the close button is clicked
            closeBtn.addEventListener("click", function() {
                lightbox.classList.remove("active");
            });

            // Close lightbox when clicking outside the image
            lightbox.addEventListener("click", function(e) {
                if (e.target === lightbox) {
                    lightbox.classList.remove("active");
                }
            });
        });
    </script>

</body>
</html>
