@model ClubManagementSystem.Models.FacilityBookingViewModel

@{
    ViewBag.Title = "Confirm Booking";
}

<h2>Confirm Booking</h2>

<div>
    <h3>Booking Details</h3>
    <p><strong>Facility:</strong> @Model.FacilityId</p>
    <p><strong>Date:</strong> @Model.BookingDate.ToShortDateString()</p>
    <p><strong>Start Time:</strong> @Model.StartTime.ToShortTimeString()</p>
    <p><strong>End Time:</strong> @Model.EndTime.ToShortTimeString()</p>
    <p><strong>User Name:</strong> @Model.Name</p>
    <p><strong>Phone Number:</strong> @Model.PhoneNumber</p>
    <p><strong>Email:</strong> @Model.Email</p>
    <p><strong>Fee:</strong> RM @Model.FeePaid.ToString("F2")</p>
</div>

<form method="post" class="form">
    <input type="hidden" asp-for="FacilityId" />
    <input type="hidden" asp-for="BookingDate" />
    <input type="hidden" asp-for="StartTime" />
    <input type="hidden" asp-for="EndTime" />
    <input type="hidden" asp-for="Name" />
    <input type="hidden" asp-for="PhoneNumber" />
    <input type="hidden" asp-for="Email" />
    <input type="hidden" asp-for="FeePaid" />
    <input type="hidden" asp-for="PayBy" />
    <button type="submit">Confirm Booking</button>
</form>