@model UpdatePasswordVM

@{
    Layout = null;
    ViewBag.Title = "Account | Update Password";
}

<head>
    <link rel="stylesheet" href="/css/Account_Design.css">
</head>

<div class="form-container update-password-container">
    <form class="form" method="post">
        <h2>Update Password</h2>

        <!-- Validation Summary -->
        <div asp-validation-summary="ModelOnly" class="validation-summary"></div>

        <!-- Current Password Field -->
        <div class="form-group">
            <label asp-for="Current" class="input-label">Current Password</label>
            <input asp-for="Current" class="input-field" type="password" placeholder="Enter your current password" autofocus>
            <span asp-validation-for="Current" class="error-message"></span>
        </div>

        <!-- New Password Field -->
        <div class="form-group">
            <label asp-for="New" class="input-label">New Password</label>
            <input asp-for="New" class="input-field" type="password" placeholder="Enter your new password">
            <span asp-validation-for="New" class="error-message"></span>
        </div>

        <!-- Confirm Password Field -->
        <div class="form-group">
            <label asp-for="Confirm" class="input-label">Confirm New Password</label>
            <input asp-for="Confirm" class="input-field" type="password" placeholder="Re-enter your new password">
            <span asp-validation-for="Confirm" class="error-message"></span>
        </div>

        <!-- Buttons -->
        <section class="form-actions">
            <button type="submit" class="submit-btn">Update</button>
            <button type="reset" class="reset-btn">Reset</button>
            <a href="/Home/Index" class="back-btn">Back to Home</a>
        </section>
    </form>
</div>
