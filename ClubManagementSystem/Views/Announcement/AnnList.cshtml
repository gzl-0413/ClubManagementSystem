@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<Announcement>

@{
    ViewBag.Title = "Home | Demo 5 - Combined";
    string[] fields = ["Title", "Content", "Photo", "DateTime", "Admin Name", "Status"];
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Announcements</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
        }

        th {
            background-color: #f2f2f2;
            color: black;
        }

            th a {
                text-decoration: none; /* Remove underline */
                color: black; /* Ensure links in headers are black */
            }

        tr:hover {
            background-color: #e6e6e6; /* Light grey background on row hover */
        }

        /* Center content horizontally and vertically for specific columns */
        th:nth-child(1), th:nth-child(2),
        th:nth-child(3), td:nth-child(3),
        th:nth-child(4), td:nth-child(4),
        th:nth-child(5), td:nth-child(5),
        th:nth-child(6), td:nth-child(6),
        th:nth-child(7), td:nth-child(7) {
            text-align: center;
            vertical-align: middle;
        }

        .toggle-switch {
            position: relative;
            display: inline-block;
            width: 50px;
            height: 25px;
        }

            .toggle-switch input {
                opacity: 0;
                width: 0;
                height: 0;
            }

        .slider {
            position: absolute;
            cursor: pointer;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: #dc3545; /* Default to red */
            transition: 0.4s;
            border-radius: 25px;
            font-size: 12px;
        }

            .slider:before {
                position: absolute;
                content: "";
                height: 19px;
                width: 19px;
                left: 3px;
                bottom: 3px;
                background-color: white;
                transition: 0.4s;
                border-radius: 50%;
            }

        input:checked + .slider {
            background-color: #28a745; /* Green when active */
        }

            input:checked + .slider:before {
                transform: translateX(25px);
            }

        .add-button {
            float: right;
            margin-bottom: 10px;
            padding: 8px 15px;
            background-color: #007bff;
            color: white;
            text-decoration: none;
            border-radius: 4px;
        }

            .add-button:hover {
                background-color: #0056b3;
                color: white;
            }

        .status-text {
            display: inline-block;
            padding: 5px 10px;
            background-color: #f1f1f1;
            border-radius: 3px;
        }

        table th a.asc::after {
            content: ' ▴';
        }

        table th a.des::after {
            content: ' ▾';
        }

        .photo-container {
            display: flex;
            gap: 10px;
        }

            .photo-container img {
                width: 100px;
                height: auto; 
                border-radius: 5px; 
                border: 1px solid #ddd;
                cursor: pointer;
            }

        .modal {
            display: none;
            position: fixed;
            z-index: 1;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.8); 
        }

        .modal-content {
            margin: auto;
            display: block;
            width: 80%;
            max-width: 700px;
        }

        .modal img {
            width: 100%;
        }

        .close {
            position: absolute;
            top: 15px;
            right: 35px;
            color: #fff;
            font-size: 40px;
            font-weight: bold;
            cursor: pointer;
        }

            .close:hover,
            .close:focus {
                color: #bbb;
                text-decoration: none;
                cursor: pointer;
            }
    </style>
</head>
<body>
    <h1>Club Announcements</h1>
    <a href="/Announcement/AnnAdd" class="add-button">Add New Announcement</a>
    <form>
        @Html.TextBox("name", "",
                 new { type = "search", autofocus = "", data_trim = "" })
        @Html.Hidden("sort")
        @Html.Hidden("dir")
        <button>Search</button>
    </form>

    <p>
        @Model.Count() of @Model.TotalItemCount record(s) |
        Page @Model.PageNumber of @Model.PageCount
    </p>

    <table>
        <thead>
            <tr>
                @foreach (var f in fields)
                {
                    string d = "asc";
                    string c = "";

                    if (f == ViewBag.Sort)
                    {
                        d = ViewBag.Dir == "des" ? "asc" : "des";
                        c = ViewBag.Dir;
                    }

                    <th>
                        <a href="?name=@ViewBag.Name&sort=@f&dir=@d" class="@c">@f</a>
                    </th>
                }
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var announcement in Model)
            {
                <tr>
                    <td>@announcement.Title</td>
                    <td>@announcement.Content</td>
                    <td>
                        @if (!string.IsNullOrEmpty(announcement.Photo) && announcement.Photo != "-")
                        {
                            <div class="photo-container">
                                @foreach (var photo in announcement.Photo.Split(','))
                                {
                                    <a href="javascript:void(0);" onclick="openModal('@Url.Content($"~/photos/{photo.Trim()}")')">
                                        <img src="@Url.Content($"~/photos/{photo.Trim()}")" alt="Announcement Photo" />
                                    </a>
                                }
                            </div>
                        }
                        else
                        {
                            <span>-</span>
                        }
                    </td>
                    <td>@announcement.DateTime.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@(string.IsNullOrWhiteSpace(ViewBag.Admins[announcement.AdminEmail]) ? "-" : ViewBag.Admins[announcement.AdminEmail])</td>
                    <td>
                        @if (announcement.Status == "Posted" || announcement.Status == "Blocked")
                        {
                            <label class="toggle-switch">
                                <input type="checkbox"
                                       data-id="@announcement.Id"
                                       checked="@(announcement.Status == "Posted")"
                                       onchange="toggleStatus(this)">
                                <span class="slider"></span>
                            </label>
                        }
                        else
                        {
                            <span class="status-text">@announcement.Status</span>
                        }
                    </td>
                    <td class="action-buttons">
                        <a href="/Announcement/AnnUpdate/@announcement.Id">
                            <button>Update</button>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div id="myModal" class="modal">
        <span class="close" onclick="closeModal()">&times;</span>
        <img class="modal-content" id="img01">
    </div>

    <script>
        // Open the modal with the clicked image
        function openModal(imgSrc) {
            var modal = document.getElementById("myModal");
            var modalImg = document.getElementById("img01");
            modal.style.display = "block";
            modalImg.src = imgSrc;
        }

        // Close the modal
        function closeModal() {
            var modal = document.getElementById("myModal");
            modal.style.display = "none";
        }

        async function toggleStatus(checkbox) {
            const announcementId = checkbox.getAttribute("data-id");
            const newStatus = checkbox.checked ? "Posted" : "Blocked";
            const previousStatus = checkbox.checked ? "Blocked" : "Posted"; // Determine the new status

            try {
                const response = await fetch(`/Announcement/ToggleStatus/${announcementId}`, {
                    method: "POST",
                    headers: { "Content-Type": "application/json" }
                });

                if (!response.ok) {
                    alert("Failed to update status.");
                    checkbox.checked = !checkbox.checked; // Revert toggle if failed
                } else {
                    alert(`Status changed successfully from ${previousStatus} to ${newStatus}.`);
                }
            } catch (error) {
                console.error("Error:", error);
                alert("An unexpected error occurred.");
                checkbox.checked = !checkbox.checked; // Revert toggle if error occurs
            }
        }
    </script>
</body>
</html>
