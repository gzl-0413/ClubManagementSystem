@model ClubManagementSystem.Models.StaffVM.Delete

@{
    ViewData["Title"] = "Delete Staff";
}

<h2>@ViewData["Title"]</h2>

<p>Are you sure you want to delete the staff member <strong>@Model.Name</strong>?</p>

<div class="form-group">
    <label for="Name">Name</label>
    <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" readonly />
</div>

<div class="form-group">
    <label for="Email">Email</label>
    <input type="email" class="form-control" id="Email" name="Email" value="@Model.Email" readonly />
</div>

<!-- Display the photo -->
<div class="form-group">
    <label for="CurrentPhoto">Current Photo</label>
    @if (!string.IsNullOrEmpty(Model.PhotoURL))
    {
        <div>
            <img src="@Url.Content("~/uploads/StaffImg/" + Model.PhotoURL)" alt="Staff Photo" width="100" />
        </div>
    }
    else
    {
        <p>No photo uploaded.</p>
    }
</div>

<form asp-action="StaffDeleteConfirmed" method="post">
    <input type="hidden" name="Id" value="@Model.Id" />

    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("StaffHome", "Staff")" class="btn btn-secondary">Cancel</a>
</form>
