@model ClubManagementSystem.Models.StaffVM.Create

@{
    ViewData["Title"] = "Add Staff";
    var workTimeSlots = new[]
    {
        "9:00 AM - 10:00 AM",
        "10:00 AM - 11:00 AM",
        "11:00 AM - 12:00 PM",
        "12:00 PM - 1:00 PM",
        "1:00 PM - 2:00 PM",
        "2:00 PM - 3:00 PM",
        "3:00 PM - 4:00 PM",
        "4:00 PM - 5:00 PM",
        "5:00 PM - 6:00 PM",
        "6:00 PM - 7:00 PM",
        "7:00 PM - 8:00 PM",
        "8:00 PM - 9:00 PM"
    };
}

<h1>@ViewData["Title"]</h1>

@* Display any error messages *@
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

@* Display any success messages *@
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<form asp-action="StaffAdd" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span class="text-danger" asp-validation-for="Email"></span>
    </div>

    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" type="password" class="form-control" />
        <span class="text-danger" asp-validation-for="Password"></span>
    </div>

    <div class="form-group">
        <label asp-for="Type"></label>
        <select id="Type" name="Type" class="form-control" onchange="toggleWorkTime()">
            <option value="" disabled selected>Select Type</option>
            <option value="Full-Time">Full-Time</option>
            <option value="Part-Time">Part-Time</option>
        </select>
        <span class="text-danger" asp-validation-for="Type"></span>
    </div>

    <!-- Work Time Section (Initially Visible for Part-Time) -->
    <div class="form-group" id="WorkTimeSection">
        <label>Work Time</label>
        <div>
            @foreach (var timeSlot in workTimeSlots)
            {
                <div class="form-check">
                    <input type="checkbox" id="@timeSlot" name="WorkTime" value="@timeSlot" class="form-check-input" />
                    <label for="@timeSlot" class="form-check-label">@timeSlot</label>
                </div>
            }
        </div>
        <span class="text-danger" asp-validation-for="WorkTime"></span>
    </div>

    <div class="form-group">
        <label asp-for="Photo"></label>
        <input asp-for="Photo" type="file" class="form-control" accept="image/*" />
        <span class="text-danger" asp-validation-for="Photo"></span>
    </div>

    <button type="submit" class="btn btn-primary">Add Staff</button>
    <a href="@Url.Action("StaffHome", "Staff")" class="btn btn-secondary">Cancel</a>
</form>

<script>
    // JavaScript function to toggle the work time checkboxes visibility
    function toggleWorkTime() {
        var workTimeSection = document.getElementById('WorkTimeSection');
        var type = document.getElementById('Type').value;

        // Show Work Time section only if 'Part-Time' is selected
        if (type === 'Full-Time') {
            workTimeSection.style.display = 'none'; // Hide the section
        } else {
            workTimeSection.style.display = 'block'; // Show the section
        }
    }

    // Initial check to hide work time if 'Full-Time' is selected on page load
    window.onload = toggleWorkTime;
</script>
