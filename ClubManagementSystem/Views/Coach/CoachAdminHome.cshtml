@model IEnumerable<ClubManagementSystem.Models.Coach>

@{
    ViewBag.Title = "Coach Admin Dashboard";
}

<div class="container">
    <!-- Display Success/Error Messages -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">
            @TempData["Success"]
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">
            @TempData["Error"]
        </div>
    }

    <!-- Action Buttons -->
    <div class="row mb-3">
        <div class="col-md-6">
            <a href="@Url.Action("CreateCoach", "Coach")" class="btn btn-primary">Add New Coach</a>
        </div>
        <div class="col-md-6">
            <!-- Search Form -->
            <form method="get" class="form-inline float-right">
                <input type="text"
                       name="name"
                       value="@ViewBag.Name"
                       class="form-control"
                       placeholder="Search by name or email" />
                <button type="submit" class="btn btn-secondary ml-2">Search</button>
            </form>
        </div>
    </div>

    <!-- Coach Table -->
    <table class="table table-bordered">
        <thead class="thead-light">
            <tr>
                <th>Coach ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Photo</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Any())
            {
                foreach (var coach in Model)
                {
                    <tr>
                        <td>@coach.CoachID</td>
                        <td>@coach.Name</td>
                        <td>@coach.Email</td>
                        <td>@coach.PhoneNumber</td>
                        <td>
                            @if (string.IsNullOrEmpty(coach.Photo))
                            {
                                <span>No Photo</span>
                            }
                            else
                            {
                                <img src="@Url.Content("~/coaches/" + coach.Photo)" alt="Coach Photo" style="width: 50px; height: 50px;" />
                            }
                        </td>
                        <td>
                            <a href="@Url.Action("EditCoach", "Coach", new { id = coach.CoachID })" class="btn btn-warning btn-sm">Edit</a>

                            <!-- Direct Delete Link -->
                            <a href="@Url.Action("DeleteCoach", "Coach", new { id = coach.CoachID })" class="btn btn-danger btn-sm">
                                Delete
                            </a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center">No coaches found.</td>
                </tr>
            }
        </tbody>
    </table>
