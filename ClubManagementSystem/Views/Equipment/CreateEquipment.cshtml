@model ClubManagementSystem.Models.EquipmentViewModel

@{
    ViewBag.Title = "Create New Equipment";
}

<form method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Stock"></label>
        <input asp-for="Stock" type="number" class="form-control" min="1" />
    </div>

    <div class="form-group">
        <label asp-for="DepositAmount"></label>
        <input asp-for="DepositAmount" type="number" class="form-control" />
    </div>

    <button type="submit">Create</button>
</form>
