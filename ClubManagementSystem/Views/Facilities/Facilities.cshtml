@model List<ClubManagementSystem.Models.FacilityViewModel>

@{
    ViewBag.Title = "Facilities";
}

<!-- Create Facility Button -->
<a href="/Facilities/CreateFacility">Create New Facility</a>

<form method="post" action="/Facilities/DeleteManyFacilities" id="f"></form>

<p>
    <button data-check="ids">Check All</button>
    <button data-uncheck="ids">Uncheck All</button>
    <button form="f">Delete Checked</button>
</p>

<table class="table">
    <thead>
        <tr>
            <td></td>
            <td>ID</td>
            <td>Name</td>
            <td>Image</td>
            <td>Description</td>
            <td>Category</td>
            <td>Price (per hour)</td>
            <td>Is Active</td>
            <td>Created At</td>
            <td>Modified At</td>
            <td>Actions</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var facility in Model)
        {
            <tr data-checkable>
                <td>
                    <input type="checkbox" name="ids" form="f" value="@facility.Id" />
                </td>
                <td>@facility.Id</td>
                <td>@facility.Name</td>
                <td>
                    @if (!string.IsNullOrEmpty(facility.Image))
                    {
                        <span>@facility.Image</span>
                    }
                    else
                    {
                        <span>No Image</span>
                    }
                </td>
                <td>@facility.Description</td>
                <td>@facility.FacilityCategoriesId</td>
                <td>@facility.Price</td>
                <td>@facility.IsActive</td>
                <td>@facility.CreatedAt</td>
                <td>@facility.ModifiedAt</td>
                <td>
                    <button data-get="/Facilities/UpdateFacilities/@facility.Id">Update</button>
                    <button data-post="/Facilities/DeleteFacilities/@facility.Id">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>
