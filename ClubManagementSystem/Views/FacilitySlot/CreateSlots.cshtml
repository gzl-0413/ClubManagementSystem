@{
    ViewBag.Title = "Create Facility Slots";
}

<h2>Create Facility Slots</h2>

<form method="post" enctype="multipart/form-data" class="form">
    <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px; align-items: center;">
    <div>
        <label for="facilityId">Select Active Facility:</label>
        <select name="facilityId" required>
            @foreach (var facility in ViewBag.Facilities)
            {
                <option value="@facility.Id">@facility.Name</option>
            }
        </select>
    </div>

    <div>
        <label for="months">Create Slots for (Months):</label>
        <input type="number" name="months" min="1" max="12" value="1" required />
    </div>

    <div>
        <label for="capacity">Set Remaining Capacity:</label>
        <input type="number" name="capacity" min="1" value="1" required />
    </div>

    <button type="submit">Create Slots</button>
    </div>
</form>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        @Html.ValidationSummary()
    </div>
}
